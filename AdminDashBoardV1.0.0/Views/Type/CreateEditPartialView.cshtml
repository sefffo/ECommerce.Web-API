@model ProductType

<form method="post" asp-action="Create" class="type-form">
    <div class="input-group-modern">
        <div class="input-wrapper">
            <i class="fas fa-layer-group input-icon"></i>
            <input asp-for="Name"
                   class="form-control form-control-modern"
                   placeholder="Enter type name (e.g., Electronics, Clothing, Books)"
                   required />
        </div>
        <button type="submit" class="btn btn-add-type">
            <i class="fas fa-plus me-2"></i>Add Type
        </button>
    </div>
    <span asp-validation-for="Name" class="text-danger validation-message"></span>
</form>

