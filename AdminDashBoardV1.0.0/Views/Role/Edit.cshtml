@model RoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="edit-role-page">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div>
            <h1 class="mb-2">
                <i class="fas fa-edit me-2"></i>Edit Role
            </h1>
            <p class="text-muted">Update role details for <strong>@Model.Name</strong></p>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="card form-card">
        <div class="card-body">
            <form method="post" asp-action="Edit" id="editRoleForm">
                <input asp-for="Id" hidden />

                <div class="form-group-modern">
                    <label asp-for="Name" class="form-label">
                        <i class="fas fa-user-shield me-2"></i>Role Name
                    </label>
                    <input asp-for="Name" class="form-control-modern" placeholder="Enter role name" />
                    <span asp-validation-for="Name" class="validation-message"></span>
                </div>

                <div class="form-actions mt-4">
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .edit-role-page {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        color: #1f2937;
        font-size: 2rem;
        font-weight: 700;
    }

    .form-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        max-width: 600px;
    }

    .form-group-modern {
        margin-bottom: 1.5rem;
    }

    .form-label {
        color: #374151;
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 0.75rem;
        display: block;
    }

    .form-control-modern {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .validation-message {
        display: block;
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e7eb;
    }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-cancel {
        background: #f3f4f6;
        color: #4b5563;
        border: none;
        border-radius: 12px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background: #e5e7eb;
            color: #1f2937;
        }

    @@media (max-width: 768px) {
        .form-actions {
            flex-direction: column;
        }

        .btn-save, .btn-cancel {
            width: 100%;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
