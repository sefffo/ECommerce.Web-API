@model RoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="edit-role-page">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div>
            <h1 class="mb-2">
                <i class="fas fa-edit me-2"></i>Edit Role
            </h1>
            <p class="text-muted">Update role details for <strong>@Model.Name</strong></p>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="card form-card">
        <div class="card-body">
            <form method="post" asp-action="Edit" id="editRoleForm">
                <input asp-for="Id" hidden />

                <div class="form-group-modern">
                    <label asp-for="Name" class="form-label">
                        <i class="fas fa-user-shield me-2"></i>Role Name
                    </label>
                    <input asp-for="Name" class="form-control-modern" placeholder="Enter role name" />
                    <span asp-validation-for="Name" class="validation-message"></span>
                </div>

                <div class="form-actions mt-4">
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
