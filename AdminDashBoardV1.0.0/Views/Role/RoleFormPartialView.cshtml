@model RoleFormViewModel

<form method="post" asp-action="Create" class="role-form">
    <div class="input-group-modern">
        <div class="input-wrapper">
            <i class="fas fa-user-shield input-icon"></i>
            <input asp-for="Name"
                   class="form-control form-control-modern"
                   placeholder="Enter role name (e.g., Administrator, Manager, User)"
                   required />
        </div>
        <button type="submit" class="btn btn-add-role">
            <i class="fas fa-plus me-2"></i>Add Role
        </button>
    </div>
    <span asp-validation-for="Name" class="text-danger validation-message"></span>
</form>

