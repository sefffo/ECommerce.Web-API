@model UserRoleViewModel
@{
    ViewData["Title"] = "Edit User Roles";
}

<div class="edit-user-page">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div>
            <h1 class="mb-2">
                <i class="fas fa-user-edit me-2"></i>Manage User Roles
            </h1>
            <p class="text-muted">Assign roles to <strong>@Model.UserName</strong></p>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="card form-card">
        <div class="card-body">
            <form method="post" asp-action="Edit" id="editUserForm">
                <input asp-for="Id" hidden />

                <!-- User Info Display -->
                <div class="user-info-section mb-4">
                    <div class="user-display">
                        <div class="user-avatar-large">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="user-info-text">
                            <h4>@Model.UserName</h4>
                            <p class="text-muted">Username</p>
                        </div>
                    </div>
                </div>

                <hr class="mb-4" />

                <!-- Roles Section -->
                <h5 class="mb-3">
                    <i class="fas fa-shield-alt me-2"></i>Assign Roles
                </h5>
                <p class="text-muted mb-4">Select which roles this user should have access to</p>

                <div class="roles-grid">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="role-card">
                            <input asp-for="@Model.Roles[i].Name" hidden />
                            <div class="form-check">
                                <input asp-for="@Model.Roles[i].IsSelected"
                                       class="form-check-input"
                                       type="checkbox"
                                       id="role_@i" />
                                <label class="form-check-label" for="role_@i">
                                    <div class="role-info">
                                        <i class="fas fa-shield-alt role-icon"></i>
                                        <span class="role-name">@Model.Roles[i].Name</span>
                                    </div>
                                </label>
                            </div>
                        </div>
                    }
                </div>
                <span asp-validation-for="Roles" class="text-danger validation-message"></span>

                <div class="form-actions mt-4">
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
