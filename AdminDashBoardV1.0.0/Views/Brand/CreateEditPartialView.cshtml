@model ProductBrand

<form method="post" asp-action="Create" class="brand-form">
    <div class="input-group-modern">
        <div class="input-wrapper">
            <i class="fas fa-tag input-icon"></i>
            <input asp-for="Name"
                   class="form-control form-control-modern"
                   placeholder="Enter brand name (e.g., Nike, Apple, Samsung)"
                   required />
        </div>
        <button type="submit" class="btn btn-add-brand">
            <i class="fas fa-plus me-2"></i>Add Brand
        </button>
    </div>
    <span asp-validation-for="Name" class="text-danger validation-message"></span>
</form>

<style>
    .brand-form {
        margin: 0;
    }

    .input-group-modern {
        display: flex;
        gap: 1rem;
        align-items: flex-start;
    }

    .input-wrapper {
        position: relative;
        flex: 1;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #9ca3af;
        z-index: 10;
    }

    .form-control-modern {
        padding: 0.875rem 1rem 0.875rem 3rem;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            outline: none;
        }

        .form-control-modern::placeholder {
            color: #9ca3af;
        }

    .btn-add-brand {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.875rem 2rem;
        font-weight: 600;
        white-space: nowrap;
        transition: all 0.3s ease;
    }

        .btn-add-brand:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .validation-message {
        display: block;
        margin-top: 0.5rem;
        font-size: 0.875rem;
    }

    @@media (max-width: 768px) {
        .input-group-modern {
            flex-direction: column;
        }

        .btn-add-brand {
            width: 100%;
        }
    }
</style>
