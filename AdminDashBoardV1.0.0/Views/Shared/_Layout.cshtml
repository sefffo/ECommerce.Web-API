<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Admin Dashboard</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/css/styles.css" rel="stylesheet" />
	<link href="~/css/layout.css" rel="stylesheet" />
	<link href="~/css/admin-pages.css" rel="stylesheet" />
	<link href="~/css/dashboard.css" rel="stylesheet" /> <!-- ADD THIS -->
	@* <link href="~/css/admin-pages.css" rel="stylesheet" /> *@
	<script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>

</head>
<body>
	<header>
		<nav class="sb-topnav navbar navbar-expand navbar-dark">
			<!-- Navbar Brand-->
			<a class="navbar-brand ps-3" asp-controller="Home" asp-action="Index">
				<i class="fas fa-store"></i>
				E-Commerce Admin
			</a>
			<!-- Sidebar Toggle-->
			<button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
				<i class="fas fa-bars"></i>
			</button>
			<!-- Navbar-->
			<div class="d-none d-md-inline-block ms-auto me-3">
				<ul class="navbar-nav">
					<li class="nav-item">
						<form method="post" asp-controller="Admin" asp-action="Logout" style="display:inline;">
							<button type="submit" class="btn btn-logout">
								<i class="fas fa-sign-out-alt me-2"></i>Logout
							</button>
						</form>
					</li>
				</ul>
			</div>
		</nav>
	</header>

	<div id="layoutSidenav">
		<div id="layoutSidenav_nav">
			<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
				<div class="sb-sidenav-menu">
					<div class="nav">
						<!-- Dashboard Home -->
						<div class="sb-sidenav-menu-heading">Dashboard</div>
						<a class="nav-link" asp-controller="Home" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
							Dashboard
						</a>

						<!-- Security Section -->
						<div class="sb-sidenav-menu-heading">Security</div>
						<a class="nav-link" asp-controller="Role" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
							Roles
						</a>
						<a class="nav-link" asp-controller="User" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
							Users
						</a>

						<!-- E-Commerce Section -->
						<div class="sb-sidenav-menu-heading">E-Commerce</div>
						<a class="nav-link" asp-controller="Product" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-box"></i></div>
							Products
						</a>
						<a class="nav-link" asp-controller="Brand" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-tag"></i></div>
							Product Brands
						</a>
						<a class="nav-link" asp-controller="Type" asp-action="Index">
							<div class="sb-nav-link-icon"><i class="fas fa-list"></i></div>
							Product Types
						</a>
					</div>
				</div>
			</nav>
		</div>

		<div id="layoutSidenav_content">
			<div class="container-fluid">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>

			<footer class="footer text-muted">
				<div class="container-fluid">
					<div class="d-flex justify-content-between align-items-center">
						<span>&copy; 2025 E-Commerce Admin Dashboard</span>
						<span><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy Policy</a></span>
					</div>
				</div>
			</footer>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/scripts.js"></script>
	<script src="~/js/datatables-simple-demo.js"></script>

	<script>
		// Sidebar toggle functionality
		document.getElementById('sidebarToggle').addEventListener('click', function() {
			document.getElementById('layoutSidenav_nav').classList.toggle('show');
		});

		// Highlight active menu item
		const currentPath = window.location.pathname;
		document.querySelectorAll('.sb-sidenav .nav-link').forEach(link => {
			if (link.getAttribute('href') === currentPath) {
				link.classList.add('active');
			}
		});
	</script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
