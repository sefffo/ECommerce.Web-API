@model ProductViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="create-product-page">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div>
            <h1 class="mb-2">
                <i class="fas fa-plus-circle me-2"></i>Add New Product
            </h1>
            <p class="text-muted">Fill in the details to add a new product to your inventory</p>
        </div>
    </div>

    <!-- Create Form Card -->
    <div class="card form-card">
        <div class="card-body">
            <form method="post" asp-action="Create" enctype="multipart/form-data" id="createProductForm">
                <input asp-for="PictureUrl" hidden />

                <partial name="CreateEditPartialView" model="Model" />

                <div class="form-actions mt-4">
                    <button type="submit" class="btn btn-create">
                        <i class="fas fa-check me-2"></i>Create Product
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
