@model ProductViewModel
@{
	ViewData["Title"] = "Edit Product";
}

<div class="edit-product-page">
	<!-- Page Header -->
	<div class="page-header mb-4">
		<div>
			<h1 class="mb-2">
				<i class="fas fa-edit me-2"></i>Edit Product
			</h1>
			<p class="text-muted">Update product details for <strong>@Model.Name</strong></p>
		</div>
	</div>

	<!-- Edit Form Card -->
	<div class="card form-card">
		<div class="card-body">
			<form method="post" asp-action="Edit" enctype="multipart/form-data" id="editProductForm">
				<input asp-for="Id" hidden />
				<input asp-for="PictureUrl" hidden />

				<partial name="CreateEditPartialView" model="Model" />

				<div class="form-actions mt-4">
					<button type="submit" class="btn btn-save">
						<i class="fas fa-save me-2"></i>Save Changes
					</button>
					<a asp-action="Index" class="btn btn-cancel">
						<i class="fas fa-times me-2"></i>Cancel
					</a>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
